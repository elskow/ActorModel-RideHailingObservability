# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=actor_observability
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost
SERVER_MODE=development

# Actor System Configuration
ACTOR_POOL_SIZE=100
ACTOR_MESSAGE_BUFFER_SIZE=1000
ACTOR_HEARTBEAT_INTERVAL=30s
ACTOR_CLEANUP_INTERVAL=5m

# Observability Configuration
TRACING_ENABLED=true
TRACING_ENDPOINT=http://localhost:14268/api/traces
TRACING_SERVICE_NAME=actor-observability
METRICS_ENABLED=true
METRICS_INTERVAL=10s

# Load Testing Configuration
LOAD_TEST_CONCURRENT_USERS=100
LOAD_TEST_DURATION=5m
LOAD_TEST_RAMP_UP=30s

# Comparison Mode
# Options: actor, traditional
SYSTEM_MODE=actor

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout